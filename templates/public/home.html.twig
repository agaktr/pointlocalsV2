{% extends 'base.front.html.twig' %}

{% block title %}Find Business locations around you{% endblock %}

{% block description %}Search for local business in Hyderabad like Hospitals, Groceries, Banks, Restaurants, Salons, Electronic, Hardware, Footwear stores and many more. Point Locals aims to provide all the locations around you.{% endblock %}

{% block body %}
    <section class="home-page-intro">

        <div id="stripes" aria-hidden="true"> <span></span> <span></span> <span></span> <span></span> <span></span></div>

        <div class="opener-image relative z-index-1">
            <img alt="Opener Image" src="{{ asset('img/PointlocalsOpener.svg') }}" height="auto" width="auto">
        </div>

        <div class="opener-text row">

            <div class="container">

                <div class="col l9 s12">

                    <h1>
                        Point Locals - The Business Directory
                    </h1>

                    <p>
                        Search for local business in Hyderabad like Hospitals, Groceries, Banks, Restaurants, Salons, Electronic, Hardware, Footwear stores and many more. Point Locals aims to provide all the locations around you.
                    </p>

                </div>

            </div>

            <div class="home-page-search">

                <div class="container relative z-index-2">

                    <div class="row no-margin-bottom search-bar-wrapper">

                        <div class="col l8 s12 search-col">

                            <div class="search-input-wrapper">

                                <i class="fas fa-search"></i>


                                <input type="text" spellcheck="false" name="search" id="search" placeholder="Search Anything Anywhere" autocomplete="off" autofocus>
                                {#<div class="did-you-mean-wrapper">#}
                                {#<span class="did-you-mean-span">Did you mean: </span><span id="suggestionLink"></span>#}
                                {#</div>#}
                            </div>
                            <div class="autosuggest"><ul></ul></div>
                            <div class="loader search-loader"></div>
                        </div>

                        <div class="col l4 s12">

                            <div class="search-input-wrapper">

                                <img alt="Search pointlocals" class="pl-icon-search" src="{{ asset('img/PointlocalsIcon.svg') }}">

                                <input data-controller="area-search" data-action="click->area-search#clear keyup->area-search#search" class="area-search-input" spellcheck="false" name="area-search-input" id="area-search-input" type="text" value="Hyderabad, Telangana" placeholder="Enter the Area" >
                                {#                                <select id="city_select">#}
                                {#                                    <option value="" selected>Your location <i class="fas fa-caret-down right"></i></option>#}
                                {#                                    {% for key,city in cities %}#}
                                {#                                        <option value="{{ city.AreaLat }},{{ city.AreaLong }}">{{ city.Name }}</option>#}
                                {#                                    {% endfor %}#}
                                {#                                </select>#}

                            </div>

                        </div>

                        {#<div class="col l1 s12">#}

                        {#<div class="search-button-wrapper">#}
                        {#<div class="btn btn-large search-btn">#}

                        {#<i class="material-icons">search</i>#}

                        {#</div>#}
                        {#</div>#}

                        {#</div>#}

                    </div>

                </div>

            </div>

        </div>

    </section>


    <section class="features-overview row no-margin-bottom relative" id="searchesRowTrigger">

        <div id="stripes" class="white" aria-hidden="true"> <span></span> <span></span> <span></span> <span></span> <span></span></div>

        <div class="container relative z-index-1">

            <div class="col s12 center margin-pop-search">

                <h2>
                    Popular Searches
                </h2>

                <p>
                    Click on a box below, and we will quickly search for the selected businesses within your location.
                </p>

            </div>

            <div class="searches-row" id="boxes">

                <div class="searches-col">

                    {% for name,val in pops %}
                        <div class="col l2 m4 s4">

                            <a class="quick-search-link" href="#" data-search="{{ name }}" data-id="{{ name }}">

                                <div class="quick-search-item">

                                    <div class="search-icon-wrapper">
                                        <img width="60" height="60" class="ps-img" loading="lazy" src="{{ asset('img/popularsearches/'~val) }}" alt="Quick Search Link">
                                    </div>
                                    <div class="search-name">{{ name }}</div>

                                </div>
                            </a>

                        </div>
                    {% endfor %}
                </div>


                {#<div class="col l6 s12 intro-image">#}

                {#<img src="{{ asset('img/pointlocals---Logo-Design.png') }}">#}

                {#</div>#}


            </div>

        </div>

    </section>

    <section id="latestUpdates" class="row no-margin-bottom relative">

        <div id="stripes" class="white" aria-hidden="true"> <span></span> <span></span> <span></span> <span></span> <span></span></div>

        <div class="container relative z-index-1">

            <div class="col l5 s12">
                <img alt="India map" width="492" height="540" class="india-map" src="{{ asset('img/IndiaMap.svg') }}">
            </div>

            <div class="col l7 s12">

                <h3>
                    Latest Updates
                </h3>

                <p>
                    View the latest changes on the pointlocals database
                </p>

                <div class="col l12 s12 notif-col relative">

                    <svg id="iconDecor" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
